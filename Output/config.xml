<config>
  <app>
    <title>Game Development Testbed</title>
    <organization>UPC</organization>
  </app>

  <renderer>
    <vsync value="false"/>
  </renderer>

  <window>
    <resolution width="1280" height="720" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <scene>
    <general assetpath="Assets/"/>

    <map_info>
      <map id="0" name="Base"/>
      <map id="1" name="Test"/>
    </map_info>

    <scene_info>
      <scene name="Title">
        <window name="MainMenu"/>
      </scene>
    </scene_info>

    <window_info>
      <window name="MainMenu" class="List" type="Base" x="50" y="50" width="200" height="100">
        <button x="25" y="25" width="20" height="10" text="New Game" function="Play"/>
      </window>
    </window_info>

  </scene>
  <fonts>
    <property path="Assets/Textures/Fonts/" />
  </fonts>
</config>
